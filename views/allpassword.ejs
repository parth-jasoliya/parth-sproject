<!DOCTYPE html>
<html lang="en">
<head>
   <title>category</title>
    <link rel="stylesheet" href="/stylesheets/tabnav.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous"> 
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    
</head>
<body>
 
  <div class="dropdown">
       <a href="/"> <button class="dropbtn"><i class="fa fa-home"></i></button></a>
      </div>
<div class="dropdown">
    <button class="dropbtn">Password category</button>
    <div class="dropdown-content">
        <a href="/add-new-cat">Add category</a>
        <a href="/category">View all category</a>
    </div>
  </div>
  <div class="dropdown">
    <button class="dropbtn">Password Details</button>
    <div class="dropdown-content">
        <a href="/add-new-pass">Add new Password</a>
        <a href="/allpassword">View all Password</a>
    </div>
  </div>
  <div class="dropdown">
    <a href="/logout" onclick="return confirm('Are you sure to logout?')""><button class="dropbtn"><i class="fa fa-sign-out"></i></button></a>
  </div>
  <table class="styled-table">
        <thead>
            <tr>
                <th>Password category</th>
                <th>Project name</th>
                <th>view</th>
                <th>edit</th>
                <th>delete</th>

            </tr>
        </thead>
        <tbody>
            <% if(records.length > 0 ){
                records.forEach(function(row){ %>
            <tr>
                <td><%= row.cat_name %></td>
                <td><%= row.pro_name %></td>
                <td> <button type="button" class="btn btn-info btn-xs" data-toggle="modal"
                 data-target="#myModal<%= row._id %>"><i class="fa fa-eye "></i></button></td>
               <td><a class="btn btn-primary btn-xs"  href="/pass_details/edit/<%= row._id %>"><i class="fa fa-edit"></i></a></td>
              <td><a  class="btn btn-danger btn-xs"  href="/pass_details/delete/<%= row._id %>" onclick="return confirm('Are you sure?')""><i class="fa fa-trash "></i></a></td>
            </tr>
            <div class="container">
                <!-- Modal -->
              <div class="modal fade" id="myModal<%= row._id %>" role="dialog">
              <div class="modal-dialog">
              
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title" style="text-align: center;">Password details</h4>
                  </div>
                  <div class="modal-body">
                    <p><%= row.pass_detail%></p>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  </div>
                </div>
                
              </div>
            </div>
            
          </div>
                
                <% }) } %>
             
           </tbody>
    </table>

    <% if (pages > 0) { %>
        <ul class="pagination text-center" style="margin-left:400px; margin-top:-10px;">
            <% if (current == 1) { %>
                <li class="disabled"><a>First</a></li>
            <% } else { %>
                <li><a href="/allpassword/1">First</a></li>
            <% } %>
            <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
            <% if (i !== 1) { %>
                <li class="disabled"><a>...</a></li>
            <% } %>
            <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                <% if (i == current) { %>
                    <li class="active"><a><%= i %></a></li>
                <% } else { %>
                    <li><a href="/allpassword/<%= i %>"><%= i %></a></li>
                <% } %>
                <% if (i == Number(current) + 4 && i < pages) { %>
                    <li class="disabled"><a>...</a></li>
                <% } %>
            <% } %>
            <% if (current == pages) { %>
                <li class="disabled"><a>Last</a></li>
            <% } else { %>
                <li><a href="/allpassword/<%= pages %>">Last</a></li>
            <% } %>
        </ul>
    <% } %>
</body>
</html>